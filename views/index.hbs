<header>
    <h1 style="display: inline; float: left">{{title}}</h1> <h1 style="display: inline;float: right">{{checks}}</h1>
</header>
<section>
    <div class="container-fluid">
        <table id="table" class="table table-striped table-bordered table-hover">
            <thead>
            <th class="col-md-5">Publisher</th>
            <th class="col-md-2">Impact</th>
            <th class="col-md-2">Total issues</th>
            <th class="col-md-2">Epub Version</th>
            <th class="col-md-4">Name</th>
            <th class="col-md-4">File Name</th>
            <th class="col-md-6">Cover</th>
            <th class="col-md-2">Check Date</th>
            <th class="col-md-3">ID</th>
            <th class="col-md-2">Link</th>
            <th class="col-md-2">Delete report</th>
            </thead>
            <tbody>
            {{#each rows}}
                <tr>
                    {{#metaData.dc:publisher}}
                        <td>{{.}} </td>
                    {{/metaData.dc:publisher}}
                    {{^metaData.dc:publisher}}
                        <td>{{metaData.dc:creator}}</td>
                    {{/metaData.dc:publisher}}
                    <td>{{{impact}}}</td>
                    <td>{{{totalCount}}}</td>
                    <td>{{{epubVersion}}}</td>
                    <td>{{title}}</td>
                    <td>{{fileName}}</td>
                    <td id="cover">{{{cover}}}</td>
                    <td>{{checkDate}}</td>
                    <td>{{ID}}</td>
                    <td><a target="_blank" class="btn btn-primary" href="{{reportPath}}">report</a></td>
                    <td nowrap>
                        <button id="{{_id}}"
                                onclick="deleteReport(this.id)"
                                class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove-sign"></span>
                        </button>
                    </td>
                </tr>
            {{/each}}
            <tbody>
        </table>
    </div>
</section>